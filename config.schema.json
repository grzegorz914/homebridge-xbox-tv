{
	"pluginAlias": "XboxTv",
	"pluginType": "platform",
	"singular": true,
	"fixArrays": true,
	"customUi": true,
	"headerDisplay": "This plugin works with Xbox Game Consoles. Devices are exposed to HomeKit as separate accessories and each needs to be manually paired.",
